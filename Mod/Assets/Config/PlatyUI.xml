<?xml version="1.0" encoding="ISO-8859-1" ?>
<mod id="PlatyUI" name="PlatyUI" module="PlatyUIUtils">

	<gameutils module="PlatyUIUtils" handler="getWidgetHelp"/>
	
	<events class="PlatyUIEventHandler"/>

	<shortcut key="Ctrl F1" function="showInterfaceHelp"/>
	<shortcut key="Ctrl F2" function="showLeaders"/>
	<shortcut key="Ctrl F9" function="showArtDefChecker"/>
	<shortcut key="Ctrl F10" function="showMirrorImage"/>
	<shortcut key="Ctrl F11" function="showForgetful"/>
	<shortcut key="Ctrl F12" function="showTimeKeeper"/>

	<options id="PlatyUI" file="PlatyUI.ini">
		<section id="Platy UI">
			<option id="GPBar" type="int" default="75"/>
			<option id="GGBar" type="int" default="25"/>
			<option id="Colours" type="boolean" default="False"/>
			<option id="Panels" type="boolean" default="False"/>
			<option id="Build" type="boolean" default="False"/>
			<option id="Movie" type="boolean" default="False"/>

			<list id="Background" key="Background Choice" type="int" default="1" listType="string" values="PlatyUI__Background"/>
		</section>
	</options>
</mod>